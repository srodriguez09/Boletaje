<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Filtro</h4>

            </div>
            <div class="card-body">
                <form method="get">
                    <div class="row">
                        <div class="col-sm-4 pr-1">

                            <div class="form-group">
                                <label>Diagnostico</label>
                                <select id="heard" class="form-control" asp-for="filtro.Codigo1">
                                    <option value="0">Seleccione</option>
                                    @foreach (var item in Model.Diagnosticos)
                                    {
                                    <option value="@item.id">@item.Descripcion  </option>
                                    }
                                </select>


                            </div>

                        </div>

                        <div class="col-sm-4 pr-1">
                            
                        </div>

                        <div class="col-md-4 pl-1">

                           

                            <div class="col-sm-12">
                                <br />
                            </div>


                            <div class="col-sm-6 pr-1">
                            </div>
                            <div class="col-sm-6 pl-1" style="text-align: right;">
                                <button title="Buscar" type="submit" class="btn btn-rounded btn-outline-primary"> <i class="fas fa-search"></i></button>

                            </div>
                        </div>

                    </div>

                </form>

            </div>
           
        </div>
    </div>

</div>

    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-8">
                            <h5>Tipos Errores</h5>
                        </div>
                        <div class="col-md-4">
                            <a asp-page="Nuevo" class="btn btn-rounded btn-outline-primary" title="Agregar">+  Agregar</a>

                        </div>
                    </div>
                </div>

                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered first">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Padre</th>

                                    <th>Descripción</th>

                                    <th width="150">Acción</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Objeto)
                                {
                                <tr>
                                    <td>@item.id</td>
                                    <td>@(Model.Diagnosticos.Where(a => a.id == item.idDiagnostico).FirstOrDefault().Descripcion) </td>

                                    <td>@item.Descripcion</td>



                                    <td>

                                        <a asp-page="./Editar" asp-route-id="@item.id" title="Editar" class="btn btn-rounded btn-outline-warning"> Editar</a>


                                    </td>
                                </tr>
                                }


                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>ID</th>
                                    <th>Padre</th>

                                    <th>Descripción</th>

                                    <th width="150">Acción</th>

                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

